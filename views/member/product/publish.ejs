  </div>
  <div class="publish_content">
      <iframe id="pic_iframe" name="pic_iframe"  class="display_none"></iframe>
      <form target="pic_iframe" class="content_form" action="/member/product/add" method="post" name="add_form" enctype="multipart/form-data" role="form" error_type="bottom">
          <input type="hidden" id="policy" name="policy" value="">
          <input type="hidden" id="signature" name="signature" value="">
          <input type="hidden" id="timept" name="timept" value="">
          <div>
               <label><img src="/images/member/images/little_03.png" alt=""/>产品类型：</label>
               <select id="product_type" name="product_type"> </select>
          </div>
          <div>
              <label><img src="/images/member/images/little_03.png" alt=""/>产品名称：</label>
              <input id="product_name" name="product_name"  type="text" placeholder="请输入产品名称" data-verify="empty" />
          </div>
          <div>
              <label><img src="/images/member/images/little_03.png" alt=""/>产品图像：</label>
              <div class="auth_up">
